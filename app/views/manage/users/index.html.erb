<div class="container">
  <h3>
    <%= t("activerecord.models.user", count: @user.count) %>
  </h3>
  <div class="container" align="right">
    <%= link_to new_manage_user_path, class: "btn btn-success btn-circle" do %>
    <i class="fa fa-plus"></i>
    <% end %>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>
          <%= User.human_attribute_name("email")%>
        </th>
        <th>
          <%= User.human_attribute_name("userType")%>
        </th>
        <th>
          <%= User.human_attribute_name("isActive")%>
        </th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @user.each do |user| %>
      <tr>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= user.userType.name %>
        </td>
        <td>
          <%= human_boolean(user.isActive) %>
        </td>
        <td>
          <%= link_to manage_user_path(user), class: "btn btn-primary btn-circle" do %>
          <i class="fa fa-eye"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_manage_user_path(user), class: "btn btn-default btn-circle" do %>
          <i class="fa fa-edit"></i>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>
