<div class="container">
  <h2>
    <%= t("activerecord.models.user_type", count: @user_types.count) %>
  </h2>

  <table class="table">

    <thead>
    <td>
    </td>
    <td>
    </td>
    <td>
    </td>
    <td>
    </td> 
    <td>
    <%= link_to new_user_type_path, class: "btn btn-success" do %>
    <i class="fa fa-plus"></i>
    <%= t(:new) %>
    <% end %>


    </td>




    <thead>
      <tr>
        <th>
          <%= UserType.human_attribute_name("name")%>
        </th>
        <th>
          <%= UserType.human_attribute_name("description")%>
        </th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
     
      <% @user_types.each do |user_type| %>
      

      <tr>
        <td>
          <%= user_type.name %>
        </td>
        <td>
          <%= user_type.description %>
        </td>
        <td>
          <%= link_to user_type, class: "btn btn-primary" do %>
          <i class="fa fa-eye"></i>
          <%= t(:show) %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_user_type_path(user_type), class: "btn btn-default" do %>
          <i class="fa fa-edit"></i>
          <%= t(:edit) %>
          <% end %>
        </td>
        <td>
          <%= link_to user_type, method: :delete, data: { confirm: t('links.are_you_sure') } , class: "btn btn-danger" do %>
          <i class="fa fa-trash"></i>
          <%= t(:delete) %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>
