<div class="container">
  <% if notice %>
  <div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
  <% end %>
  <h1>
    <%= t("activerecord.models.user", count: @user.count) %>
  </h1>

  <div class="container" align="right">
    <%= link_to new_manage_user_path, class: "btn btn-success" do %>
    <i class="fa fa-plus"></i>
    <%= t('views.user.new_user') %>
    <% end %>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>
          <%= User.human_attribute_name("email")%>
        </th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @user.each do |user| %>
      <tr>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= link_to manage_user_path(user), class: "btn btn-info" do %>
          <i class="fa fa-eye"></i>
          <%=t :show %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_manage_user_path(user), class: "btn btn-default" do %>
          <i class="fa fa-edit"></i>
          <%=t :edit %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>
