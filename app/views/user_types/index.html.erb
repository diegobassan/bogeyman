<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header"><%= t("activerecord.models.user_type", count: @user_types.count) %></h1>
                </div>
              </div>
    <table class="table table-condensed">
      <thead>
        <td>
          <%= link_to new_user_type_path, class: "btn btn-success" do %>
          <i class="fa fa-plus"></i>
          <%= t(:new) %>
          <% end %>
        </td>
      </thead>
    </table>
    <div class="table-responsive">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>
          <%= UserType.human_attribute_name("name")%>
        </th>
        <th>
          <%= UserType.human_attribute_name("description")%>
        </th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @user_types.each do |user_type| %>
        <tr>
        <td>
          <%= user_type.name.first(40) %>
        </td>
        <td>
          <%= user_type.description.first(60) %>
        </td>
        <td>
          <%= link_to user_type, class: "btn btn-primary" do %>
          <i class="fa fa-eye"></i>
          <%= t(:show) %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_user_type_path(user_type), class: "btn btn-default" do %>
          <i class="fa fa-edit"></i>
          <%= t(:edit) %>
          <% end %>
        </td>
        <td>
          <%= link_to user_type, method: :delete, data: { confirm: t('links.are_you_sure') } , class: "btn btn-danger" do %>
          <i class="fa fa-trash"></i>
          <%= t(:delete) %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div align='center'>
  <%= paginate @user_types %>
</div>
<div align='right'>
  <%= page_entries_info @user_types %>
</div>
</div>
</div>
</div>
</div>
</div>




