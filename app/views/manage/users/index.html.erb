<div class="container">
  <h2>
    <%= t("activerecord.models.user", count: @user.count) %>
  </h2>
  <table class="table">
<thead>
<td>
<%= link_to new_manage_user_path, class: "btn btn-success" do %>
    <i class="fa fa-plus"></i>
    <%= t(:new) %>
    <% end %>
</td>
</thead>
    <thead>
      <tr>
        <th>
          <%= User.human_attribute_name("email")%>
        </th>
        <th>
          <%= User.human_attribute_name("userType")%>
        </th>
        <th class="hidden-xs">
          <%= User.human_attribute_name("isActive")%>
        </th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @user.each do |user| %>
      <% if user.isActive %>
      <tr>
        <% else %>
        <tr class="danger">
          <% end %>
          <td>
            <%= user.email %>
          </td>
          <td>
            <%= user.userType.name %>
          </td>
          <td>
            <%= human_boolean(user.isActive) %>
          </td>
          <td>
            <%= link_to manage_user_path(user), class: "btn btn-primary" do %>
            <i class="fa fa-eye"></i>
            <%= t(:show) %>
            <% end %>
          </td>
          <td>
            <% if user != current_user %>
              <%= link_to edit_manage_user_path(user), class: "btn btn-default" do %>
              <i class="fa fa-edit"></i>
              <%= t(:edit) %>
              <% end %>
            <% end %>
          </td>
          <td class="visible-xs">
            <div class="dropdown">
              <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                <%= t('actions') %>
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                <li>
                  <%= link_to manage_user_path(user) do %>
                  <i class="fa fa-eye"> <%= t('show') %></i>
                  <% end %>
                </li>
                <% if user != current_user %>
                  <li role="separator" class="divider">
                  </li>
                  <li>
                    <%= link_to edit_manage_user_path(user) do %>
                    <i class="fa fa-edit"> <%= t('edit') %></i>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  </div>
